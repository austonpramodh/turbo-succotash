  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@turbo-succotash-libs/eslint-config": "*",
    "@turbo-succotash-libs/tsconfig": "*",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
